# Environment Configuration File
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or .env files with secrets

# ==================== Application ====================
NODE_ENV=production
LOG_LEVEL=info

# ==================== Database (PostgreSQL) ====================
DB_USER=postgres
DB_PASSWORD=change_me_to_secure_password
DB_NAME=cleancraft
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ==================== Redis Cache ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_to_secure_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ==================== Supabase ====================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==================== Strapi CMS ====================
NEXT_PUBLIC_STRAPI_URL=https://your-strapi-instance.com
NEXT_PUBLIC_STRAPI_API_TOKEN=your_strapi_api_token_here
STRAPI_API_URL=https://your-strapi-instance.com
STRAPI_API_TOKEN=your_strapi_api_token_here

# ==================== Email Service ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@cleancraft.com

# ==================== AWS Configuration ====================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_ECR_REPOSITORY=cleancraft
AWS_APPRUNNER_SERVICE_ARN=your_apprunner_arn

# ==================== API Keys ====================
API_SECRET_KEY=your_secret_key_for_api_validation
JWT_SECRET=your_jwt_secret_key

# ==================== Monitoring & Analytics ====================
GRAFANA_PASSWORD=admin123
GRAFANA_ADMIN_USER=admin

# ==================== Security ====================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SESSION_SECRET=your_session_secret_key

# ==================== Feature Flags ====================
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_HTTPS_REDIRECT=true

# ==================== URLs ====================
NEXT_PUBLIC_APP_URL=https://yourdomain.com
API_BASE_URL=https://api.yourdomain.com

# ==================== Development (Optional) ====================
DEBUG=false
VERBOSE_LOGGING=false
